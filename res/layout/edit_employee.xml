<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#E0F2F1"
    android:padding="10dp">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Mã nhân viên:" />

        <EditText
            android:id="@+id/edtCodeEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:hint="Nhập mã nhân viên..."
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Mã phòng ban:" />

        <Spinner 
            android:id="@+id/spinnerMaPhongBan"
            android:popupBackground="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Tên nhân viên:" />

        <EditText
            android:id="@+id/edtNameEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nhập tên nhân viên..."
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQueQuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Quê quán:" />

        <EditText
            android:id="@+id/edtQueQuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Quê quán..."
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Có gia đình?" />
		<RadioGroup
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal">
		    <RadioButton 
		        android:id="@+id/rdYes"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Có"
		        />
		     <RadioButton 
		        android:id="@+id/rdNo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Không"
		        />
		</RadioGroup>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Giới tính" />
		<RadioGroup
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal">
		    <RadioButton 
		        android:id="@+id/rdNam"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Nam"
		        />
		     <RadioButton 
		        android:id="@+id/rdNu"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Nũ"
		        />
		</RadioGroup>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Số điện thoại" />

        <EditText
            android:id="@+id/edtPhoneEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
		
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Ngày sinh" />

        <EditText
            android:id="@+id/edtBirthdayEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Email" />

        <EditText
            android:id="@+id/edtEmailEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtCmnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập chứng minh thư"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtNoiCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nơi cấp"
            android:ems="10"
            android:inputType="textPersonName" />
        
        <EditText
            android:id="@+id/edtNgayCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ngày cấp"
            android:inputType="textPersonName" />
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<Button 
		    android:id="@+id/btnCapNhat"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Cập nhật"/>  
		    
		<Button 
		    android:id="@+id/btnHuyBoCapNhat"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Hủy bỏ"/> 
    </LinearLayout>
</LinearLayout>